@model PulseMusic.Models.Music



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Music</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <input asp-for="Id" class="form-control" value="A1" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkAudio" class="control-label"></label>
                <input asp-for="LinkAudio" class="form-control" value="No" hidden/>
                <input name="audioMusic" type="file" class="form-control"/>
                <span asp-validation-for="LinkAudio" class="text-danger"></span>
            </div>

            
            <div class="d-flex">
                <div>
                        <label asp-for="Likes" class="control-label"></label>
                        <input asp-for="Likes" class="form-control" value="0"/>
                        <span asp-validation-for="Likes" class="text-danger"></span>
                </div>
                <div>
                        <label asp-for="Player" class="control-label"></label>
                        <input asp-for="Player" class="form-control" value="0"/>
                        <span asp-validation-for="Player" class="text-danger"></span>
                </div>
            </div>
                
            
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" value="No" hidden/>
                    <input name="imageMusic" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostingTime" class="control-label"></label>
                <input asp-for="PostingTime" class="form-control" />
                <span asp-validation-for="PostingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class ="form-control" asp-items="ViewBag.AlbumId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" class ="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
